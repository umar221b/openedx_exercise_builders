<div class="row align-items-center">
  <div class="col align-self-center">
    <div class="card mx-auto" id="login-card">
      <h2 class="card-title text-center m-3">Login</h2>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="input-group mb-3">
            <span class="input-group-text" id="email-symbol">‚úâÔ∏è</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email', 'aria-label' => 'Email' %>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="lock-symbol">üîí</span>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password', 'aria-label' => 'Password' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          <% end %>

          <div class="actions d-grid">
            <%= f.submit "Log in", class: 'btn btn-primary mb-3 mt-3' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>